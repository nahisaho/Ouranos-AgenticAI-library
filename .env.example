# Environment Configuration for Ouranos Interactive Platform
# Copy this file to .env and fill in your values

# === Application ===
APP_NAME="Ouranos Interactive Platform"
APP_VERSION="2.0.0"
DEBUG=false

# === API Server ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# === Database (SurrealDB) ===
SURREAL_URL=ws://surrealdb:8000/rpc
SURREAL_NAMESPACE=ouranos
SURREAL_DATABASE=prompts
SURREAL_USER=root
SURREAL_PASS=root

# === Prompts Directory ===
PROMPTS_DIR=/app/prompts

# === AI Providers ===
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Ollama (for local models)
OLLAMA_URL=http://localhost:11434

# Default provider and model
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4

# === Security ===
# Optional: Password protection (leave empty to disable)
APP_PASSWORD=

# Secret key for JWT tokens (change in production!)
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# === CORS ===
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# === Logging ===
LOG_LEVEL=INFO
